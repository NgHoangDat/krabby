{
    "name": "Rust Dev Container",
    "image": "mcr.microsoft.com/devcontainers/rust:0-ubuntu-22.04",
    "features": {
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/rust-analyzer:1": {},
        "ghcr.io/github/copilot/features/copilot:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "GitHub.copilot"
            ]
        }
    }
}
